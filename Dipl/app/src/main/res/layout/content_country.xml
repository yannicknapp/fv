<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Country"
    tools:showIn="@layout/activity_country">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line1"
        android:layout_marginTop="10dp">
    <Button
        android:id="@+id/Austria"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight=".33"
        android:layout_margin="5dp"
        android:background="@drawable/austria_flag"
        android:layout_below="@+id/bemerkung"/>

    <Button
        android:id="@+id/Spain"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight=".33"
        android:layout_margin="5dp"
        android:layout_below="@+id/bemerkung"
        android:background="@drawable/spain_flagge" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight=".33"
        android:id="@+id/Italy"
        android:layout_margin="5dp"
        android:background="@drawable/italy_flag"
        android:layout_below="@+id/bemerkung"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:id="@+id/line2">
    <Button
        android:id="@+id/Germany"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight=".33"
        android:layout_margin="5dp"
        android:background="@drawable/germany_flagge" />

    <Button
        android:id="@+id/Russia"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight=".33"
        android:layout_margin="5dp"
        android:background="@drawable/russia_flagge" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight=".33"
        android:id="@+id/USA"
        android:layout_margin="5dp"
        android:background="@drawable/usa_flagge"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:id="@+id/line3">
        <Button
            android:id="@+id/Croatia"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_margin="5dp"
            android:background="@drawable/croatia_flagge" />

        <Button
            android:id="@+id/Mexico"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_margin="5dp"
            android:background="@drawable/mexico_flagge" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:id="@+id/Turkey"
            android:layout_margin="5dp"
            android:background="@drawable/turkey_flagge"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line3"
        android:id="@+id/line4">
        <Button
            android:id="@+id/Japan"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_margin="5dp"
            android:background="@drawable/japan_flagge" />

        <Button
            android:id="@+id/Serbia"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_margin="5dp"
            android:background="@drawable/serbia_flagge" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:id="@+id/China"
            android:layout_margin="5dp"
            android:background="@drawable/china_flagge"
            />

    </LinearLayout>



</RelativeLayout>


</ScrollView>